b-blog-post-preaview()

	.h-blog-post-preaview-header
		width 100%
		background-color #0bb1e5

	.b-blog-post-preaview
		padding 15px 0px
		&__date
			display inline-block
			padding 11px
			font-size 12px
			color #fff
			line-height 1.5em
		&__comment-count
			display inline-block
			padding 11px
			font-size 12px
			color #ffffff
			line-height 1.5em
			text-decoration none
			&:hover
				color #0881a7
		&__img
			width 100%
		&__title
			padding-bottom 11px
			margin 10px 0px
			font-size 18px
			color #353535
			line-height 1.3em
			font-weight 600
		&__text
			font-size 15px
			padding 0px
			margin 0px
			line-height 1.5em
