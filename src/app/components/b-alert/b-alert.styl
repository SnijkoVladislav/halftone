b-alert()
	.h-alert
		position absolute
		top 0px
		bottom 0px
		right 0px
		left 0px
		background-color rgba(170, 200, 230, 0.6)
		transform translate(0, -100%)
		transition transform 0.25s linear
		cf()
		&._active
			transform translate(0, 0)

	.b-alert
		align()
		transform translate(-50%, -50%) scale(1.3)
		&__img
			display block
			border 2px solid #6BC1F2

	.b-close
		display block
		position absolute
		right 10px
		top 30px
		font-size 50px
		line-height 0
		color #0bb1e5
		cursor pointer
		transition transform 0.25s linear
		&:hover
			transform rotate(90deg)
