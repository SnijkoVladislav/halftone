b-alert()
	.h-alert
		position absolute
		top 0px
		bottom 0px
		right 0px
		left 0px
		background-color rgba(183, 213, 251, 0.9)
		transform translate(0, -100%)
		transition transform 0.25s linear
		cf()
		&._active
			transform translate(0, 0)
		&:hover
			background-color rgba(170, 200, 230, 0.6)

	.b-alert
		align()
		&__img
			transform scale(1.3)
			border 2px solid #6BC1F2
