b-slider-testimonials()
	// .h-author

	.b-slider-testimonials
		position relative
		height 230px
		cf()
		&:hover
			.b-arrow
				opacity 1
		// &__items
		&__controls
			position absolute
			top 0px
			right 0px
			transform translate(0px, -150%)
			padding-left 10px
			background-color #fff

	.b-testimonials-post
		opacity 0
		position absolute
		&._active
			opacity 1
		&__text
			font-style italic
			line-height 22px
			margin-bottom 11px
			line-height 1.5em
		&__pic
			box-shadow 0px 0px 0px 5px #e0e0e0
			border-radius 100%
			float right
			height 70px
			margin-left 20px
			margin-right 20px
			overflow hidden
			width 70px
			border 0
		&__name
			font-size 15px
			text-align right
			color #0bb1e5
			font-weight 600
			padding 10px 0px 5px 0px
			font-weight 600
			margin 0px
		&__profession
			display block
			text-align right
			line-height 1.5em
			padding-bottom 11px

	.b-arrow
		height 20px
		width 20px
		display block
		opacity 0
		transition all 0.2s linear
		cursor pointer
		display inline-block
		&._next
			background-position -20px 0px
			background-image url('../../../../assets/images/slider/flexslider-arrows.png')
			&:hover
				background-position -20px 20px
		&._prev
			background-position 0px 0px
			background-image url('../../../../assets/images/slider/flexslider-arrows.png')
			&:hover
				background-position 0px 20px
