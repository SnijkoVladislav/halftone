b-article-case()
	.h-article
		position absolute
		top 0px
		bottom 0px
		right 0px
		left 0px
		background-color rgba(170, 200, 230, 0.6)
		transform translate(100%, 0)
		transition transform 0.25s linear
		&._active
			transform translate(0, 0)

	.b-article
		padding 20px
		background-color #FFF
		align()
		+below(840px)
			width 90%
		&__title
			color #353535
			text-decoration none
			font-weight 600
			margin-top 11px
			font-size 24px
			line-height 1.3em
		&__img
			display block
			width 100%
		&__text
			line-height 1.5em
			padding-bottom 11px

	.b-close
		display block
		position absolute
		right 10px
		top 30px
		font-size 50px
		line-height 0
		color #0bb1e5
		cursor pointer
		transition transform 0.25s linear
		&:hover
			transform rotate(90deg)
