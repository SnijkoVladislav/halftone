b-article-case()
	.h-article
		position absolute
		top 0px
		bottom 0px
		right 0px
		left 0px
		background-color rgba(183, 213, 251, 0.9)
		transform translate(100%, 0)
		transition transform 0.25s linear
		&._active
			transform translate(0, 0)
		&:hover
			background-color rgba(170, 200, 230, 0.6)

	.b-article
		padding 20px
		align()
		background-color #FFF
		+below(840px)
			width 90%
		&__title
			color #353535
			text-decoration none
			font-weight 600
			margin-top 11px
			font-size 24px
			line-height 1.3em
		&__img
			display block
			width 100%
		&__text
			line-height 1.5em
			padding-bottom 11px
