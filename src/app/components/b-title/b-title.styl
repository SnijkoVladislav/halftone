.b-slider
	position relative
	&__item
		background-color #fff
	&__controller
		width 96%
		align()
	&:hover
		.b-arrow
			opacity 1

.b-slide
	transition all 0.5s linear
	display none
	opacity 0
	&__img
		max-width 100%
	&__text
		position absolute
		bottom 0px
		left 0px
		right 0px
		margin 0px
		padding 30px
		color #ffffff
		font-size 36px
		background-color rgba(11, 177, 229, 0.8)
	&._active
		display block
		opacity 1

.b-arrow
	height 20px
	width 20px
	display block
	opacity 0
	transition all 0.2s linear
	&._next
		background-position -20px 0px
		background-image url('../../../../assets/images/slider/flexslider-arrows.png')
		&:hover
			background-position -20px -20px
	&._prev
		background-position 0px 0px
		background-image url('../../../../assets/images/slider/flexslider-arrows.png')
		&:hover
			background-position 0px 20px
