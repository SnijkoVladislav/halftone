b-nav()
	.b-nav
		margin 0px
		padding 0px
		+above(840px)
			display block !important
		&__item
			padding 10px
			border 3px
			margin 0px 7px
			color #797979
			text-decoration none
			transition background-color 0.25s linear
			cursor pointer
			&:hover
				color #FFF
				background-color #0bb1e5
			&.active
				background-color #0bb1e5
			+below(840px)
				display block

	.h-link
		display inline-block
		list-style-type none
		+below(840px)
			display block

	.b-switcher
		display block
		position relative
		top -20px
		float right
		font-size 50px
		line-height 0
		color #0bb1e5
		cursor pointer
		transition transform 0.25s linear
		&:hover
			transform rotate(90deg)
		+above(840px)
			display none
