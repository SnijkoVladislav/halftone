b-slider-main()
	.b-slider-main
		position relative
		overflow hidden
		&__item
			height 450px
			background-color #fff
		&__controller
			width 96%
			align()
		&:hover
			.b-arrow
				opacity 1

	.b-slide
		@extend $_txt-a_c
		align()
		transition all 0.5s linear
		opacity 0
		&__img
			height 100%
		&__text
			position absolute
			bottom 0px
			left 0px
			right 0px
			margin 0px
			padding 30px
			color #ffffff
			font-size 36px
			background-color rgba(11, 177, 229, 0.8)
		&._active
			opacity 1

	.b-arrow
		height 20px
		width 20px
		display block
		opacity 0
		transition all 0.2s linear
		cursor pointer
		&._next
			@extend $_pull-r
			background-position -20px 0px
			background-image url('../../../../assets/images/slider/flexslider-arrows.png')
			&:hover
				background-position -20px -20px
		&._prev
			@extend $_pull-l
			background-position 0px 0px
			background-image url('../../../../assets/images/slider/flexslider-arrows.png')
			&:hover
				background-position 0px 20px
