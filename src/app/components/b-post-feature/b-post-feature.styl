b-post-feature()
	.b-post-feature
		text-align center
		&__img
			border-radius 50%
			border 7px solid #e0e0e0
			transition border 0.3s linear
			&:hover
				border 7px solid #0bb1e5
		&__title
			color #0bb1e5
			font-size 28px
			padding 22px 0 11px 0
			margin 0
			text-align center
		&__text
			line-height 1.5em
